# HaoXai Docker Environment Configuration

# Flask Configuration
SECRET_KEY=change-this-secret-key-in-production
FLASK_ENV=production

# Database Configuration
DB_TYPE=sqlite
# For MySQL, set DB_TYPE=mysql and configure below:
# DB_TYPE=mysql

# MySQL Configuration (only used when DB_TYPE=mysql)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=HaoXai
MYSQL_PASSWORD=HaoXai_password
MYSQL_DATABASE=HaoXai
MYSQL_ROOT_PASSWORD=root_password

# Redis Configuration (optional, for session storage)
REDIS_HOST=redis
REDIS_PORT=6379

# Application Configuration
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=/app/uploads
SESSION_FILE_DIR=/app/flask_session

